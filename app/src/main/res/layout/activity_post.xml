<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/getPdfButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="downloadPdf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toEndOf="@+id/getLinkButton"
        app:layout_constraintTop_toBottomOf="@+id/testoPostTextView"
        app:layout_constraintVertical_bias="0.064"
        app:srcCompat="@drawable/pdf_icon_foreground" />

    <ImageButton
        android:id="@+id/getLinkButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="openLink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testoPostTextView"
        app:layout_constraintVertical_bias="0.064"
        app:srcCompat="@drawable/link_icon_foreground" />

    <TextView
        android:id="@+id/testoPostTextView"
        android:layout_width="331dp"
        android:layout_height="180dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagTextView"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/tagTextView"
        android:layout_width="99dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />

    <ImageButton
        android:id="@+id/getCommentiButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="seeComments"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/getPdfButton"
        app:layout_constraintTop_toBottomOf="@+id/testoPostTextView"
        app:layout_constraintVertical_bias="0.064"
        app:srcCompat="@drawable/message_icon_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>