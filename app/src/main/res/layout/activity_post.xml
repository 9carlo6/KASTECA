<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/getPdfButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="downloadPdf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toEndOf="@+id/pdfTextView"
        app:layout_constraintTop_toBottomOf="@+id/testoPostTextView"
        app:layout_constraintVertical_bias="0.065"
        app:srcCompat="@drawable/pdf_icon_foreground" />

    <ImageButton
        android:id="@+id/getLinkButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="openLink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toEndOf="@+id/linkTextView"
        app:layout_constraintTop_toBottomOf="@+id/getPdfButton"
        app:layout_constraintVertical_bias="0.072"
        app:srcCompat="@drawable/link_icon_foreground" />

    <TextView
        android:id="@+id/pdfTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pdf"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.332"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testoPostTextView"
        app:layout_constraintVertical_bias="0.116" />

    <TextView
        android:id="@+id/linkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.332"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdfTextView"
        app:layout_constraintVertical_bias="0.175" />

    <TextView
        android:id="@+id/testoPostTextView"
        android:layout_width="358dp"
        android:layout_height="188dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagTextView"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/tagTextView"
        android:layout_width="99dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <ImageButton
        android:id="@+id/getCommentiButton"
        android:onClick="seeComments"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toEndOf="@+id/commentiTextView"
        app:layout_constraintTop_toBottomOf="@+id/getLinkButton"
        app:layout_constraintVertical_bias="0.136"
        app:srcCompat="@drawable/message_icon_foreground" />

    <TextView
        android:id="@+id/commentiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commenti"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.298"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linkTextView"
        app:layout_constraintVertical_bias="0.241" />

</androidx.constraintlayout.widget.ConstraintLayout>