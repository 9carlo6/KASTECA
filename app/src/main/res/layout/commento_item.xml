<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="0dp">

    <TextView
        android:id="@+id/data_commento_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_commento"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/formato_data"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/rispondi_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_commento"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/data_commento_view"
        android:layout_toRightOf="@+id/data_commento_view"
        android:clickable="false"
        android:text="@string/rispondi"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/elimina_commento_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_commento"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/data_commento_view"
        android:text="Elimina"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/visualizza_risposte_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_commento_view"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:clickable="false"
        android:text="@string/visualizza_risposte"
        android:textSize="12sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_commento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:divider="@android:color/transparent"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardCornerRadius="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/nome_cognome_commento_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:textColor="@color/colorGeneralText"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/testo_commento_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/colorGeneralText" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>